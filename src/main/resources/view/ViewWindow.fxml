<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="View Contact" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <!-- TODO: Add Icon for View Window -->
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@ViewWindow.css" />
      </stylesheets>

        <ScrollPane style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;"
                    fitToWidth="true">
            <VBox spacing="15" style="-fx-padding: 20;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>

                <!-- Header -->
                <Label fx:id="nameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <Separator/>

                <!-- Personal Information Section -->
                <VBox spacing="8">
                    <Label text="Personal Information"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

                    <HBox spacing="10">
                        <Label text="Tags: " style="-fx-font-weight: bold; -fx-min-width: 80;"/>
                        <Label fx:id="tagsLabel" />
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Class: " style="-fx-font-weight: bold; -fx-min-width: 80;"/>
                        <Label fx:id="classLabel" />
                    </HBox>
                </VBox>

                <Separator/>

                <!-- Basic Information Section -->
                <VBox spacing="8">
                    <Label text="Contact Information"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <HBox spacing="10">
                        <Label text="Phone:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
                        <Label fx:id="phoneLabel"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Email:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
                        <Label fx:id="emailLabel"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Address:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
                        <Label fx:id="addressLabel" wrapText="true"/>
                    </HBox>
                </VBox>

                <Separator/>

                <!-- Notes Section -->
                <VBox spacing="8">
                    <Label text="Notes" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <TextArea fx:id="notesArea" editable="false"
                              wrapText="true" prefRowCount="4">
                        <style>-fx-background-color: #f8f9fa; -fx-border-color: #ddd;</style>
                    </TextArea>
                </VBox>

                <Separator/>

                <!-- Attendance Section -->
                <VBox spacing="8">
                    <Label text="Attendance"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label fx:id="attendanceLabel" wrapText="true"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </Scene>
  </scene>
</fx:root>
