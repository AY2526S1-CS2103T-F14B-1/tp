<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<fx:root resizable = "false" title = "Error Message" type = "javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@InfoPopup.css" />
            </stylesheets>

            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                <Label fx:id="msgLabel" wrapText="true" textAlignment="CENTER"/>
                <Label text="(Press Enter to continue)" textAlignment="CENTER"/>
            </VBox>
        </Scene>
    </scene>
</fx:root>
