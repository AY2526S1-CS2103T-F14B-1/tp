@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "v:ViewCommand" as ViewCommand LOGIC_COLOR
participant ":ViewCommandParser" as ViewCommandParser LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

box UI UI_COLOR_T1
participant ":MainWindow" as MainWindow UI_COLOR
end box

[-> LogicManager : execute("view 1")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("view 1")
activate AddressBookParser

AddressBookParser -> ViewCommandParser : parse("1")
activate ViewCommandParser

ViewCommandParser --> ViewCommandParser : validate index
ViewCommandParser -> ViewCommand : new ViewCommand(index)
activate ViewCommand

ViewCommandParser --> AddressBookParser : ViewCommand
deactivate ViewCommandParser
AddressBookParser --> LogicManager : ViewCommand
deactivate AddressBookParser

LogicManager -> ViewCommand : execute()
activate ViewCommand

ViewCommand -> Model : getFilteredPersonList()
activate Model
Model --> ViewCommand : personList
deactivate Model

ViewCommand -> ViewCommand : getPersonByIndex(1)

ViewCommand --> LogicManager : CommandResult\nwith person data
deactivate ViewCommand

LogicManager --> MainWindow : CommandResult\nwith showViewWindow flag
deactivate LogicManager

MainWindow --> MainWindow : openViewWindow(personData)

[<-- MainWindow
@enduml
